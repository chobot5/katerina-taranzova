---
import '../styles/global.css'
import Content from '../components/ui/Content.astro'
import Navigation from '../components/Navigation.astro'
import Text from '../components/ui/Text.astro'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='description' content='Kateřina Taranzová' />
    <meta name='author' content='Kateřina Taranzová' />
    <meta name='keywords' content='Kateřina Taranzová' />
    <meta property='og:title' content='Kateřina Taranzová' />
    <meta property='og:description' content='Kateřina Taranzová' />
    <meta property='og:image' content='/img/about.webp' />
    <meta property='og:url' content='https://abc.cz' />
    <meta property='og:site_name' content='www.abc.cz' />
    <meta property='og:type' content='website' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap'
      rel='stylesheet'
    />
    <title>Kateřina Taranzová</title>
    <style>
      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body>
    <div class='layout'>
      <Navigation />
      <div class='mt-[60px]'><slot /></div>
      <footer class='text-center bg-[#322e2b]'>
        <Content bg='transparent'>
          <div class='grid grid-cols-1 md:grid-cols-3 gap-4 border-b border-[#9e9e9e] pb-4'>
            <div class='text-left flex flex-col gap-2'>
              <strong class='text-light text-sm'>Kateřina Taranzová</strong>
              <div><p class='text-light text-sm'>IČO: 22294449</p></div>
            </div>
            <div class='text-left flex flex-col gap-2'>
              <strong class='text-light text-sm'>Kontaktní údaje</strong>
              <div>
                <div class='grid grid-cols-[20px_auto] gap-2 items-center'>
                  <img src='/icons/mail-white.svg' alt='Adresa' /><p class='text-light text-sm'>
                    <a href='mailto:Katerina.taranzova@gmail.com' class='hover:underline'
                      >katerina.taranzova@gmail.com</a
                    >
                  </p>
                </div>
                <div class='grid grid-cols-[20px_auto] gap-2 items-center'>
                  <img src='/icons/mail-white.svg' alt='Adresa' /><p class='text-light text-sm'>
                    <a href='tel:+420730104220' class='hover:underline'>+420 730 104 220</a>
                  </p>
                </div>
              </div>
            </div>
            <div class='text-left flex flex-col gap-2'>
              <strong class='text-light text-sm'>Adresa</strong>
              <div class='text-light text-sm'>
                <Text class='mb-0'>Myslíkova 1998/30,</Text>
                <Text class='mb-0'>110 00</Text>
                <Text class='mb-0'>Praha – Nové Město</Text>
              </div>
            </div>
          </div>
        </Content>
        <p class='text-sm pb-12 text-[#9e9e9e]'>
          © {new Date().getFullYear()} Kateřina Taranzová
        </p>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
