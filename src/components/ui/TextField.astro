---
interface Props {
  label: string
  id: string
  name: string
  type: 'text' | 'email'
  pattern?: string
}

const { label, id, name, type, pattern } = Astro.props
---

<div class='flex flex-col gap-1'>
  <label for={id} class='font-semibold'>{label}</label>
  <input
    type={type}
    id={id}
    name={name}
    pattern={pattern}
    maxlength='60'
    required
    class='bg-white border border-gray-300 rounded-md h-12 px-3 focus-visible:outline-secondary focus-visible:outline-[1px] focus-visible:border-secondary user-invalid:focus-visible:outline-red-300 inset-shadow-sm inset-shadow-gray-100'
  />
  <div class='error-message'></div>
</div>
